</html>
<script>
	function setGreeting1(){
		paramString = $("#Param-String").val();
		paramPrice = web3.toWei($(".Param-Price").val());
		smartContract.setPrice(paramString, paramPrice, {
					from: web3.eth.accounts[0],
				}, (function (err, result) {
		}));
		alert('thank you for submitting: ' + paramString + ', for ' + paramPrice + ' wei, please wait a few minuts for confirmation from metamask')
	};
	</script>
